@import './_Edit.scss';
.container {
	position: fixed;
	width: 100%;
  top: 0;
  bottom: 0;
  margin: 0;
  background-color: #f9f9f9;
	overflow: auto;
}

.qu-wrap {
	width: 100rem;
	margin: 5rem auto;
  header {
		overflow: hidden;
		font-size: 1.8rem;
		font-weight: 700;
		text-overflow: ellipsis;
		white-space: nowrap;
  }
}

.btn {
  width: 8rem;
  height: 3rem;
  margin: 0 auto;
  line-height: 3rem;
  cursor: pointer;
  text-align: center;
  color: #fff;
  @include add-btn;
}

@media screen and (max-width: 640px) {
	#app {
		width: 100%;
	}

	.qu-wrap {
		width: 100%;
		margin: 0;
		padding: 0 2rem;

		header {
			margin: 0;
		}

		.qu-content {
			padding: 0;

			.qu-item {
				padding: 1rem;
			}
		}
	}

	textarea {
		width: 80%;
		border: 1px solid #999;
	}
}